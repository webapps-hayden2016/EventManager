@model EventManager.Models.Event
@{
    ViewData["Title"] = "Add Event";
}
@Html.AntiForgeryToken()

<h2>Create a New Event</h2>
<hr />
<div class="form">
    <form asp-action="Create" class="form-horizontal">
        <div class="from-group">
            <label asp-for="Name" class="col-sm-2">Event Name: </label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" autofocus />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="from-group">
            <label asp-for="Artist" class="col-sm-2">Artist Name: </label>
            <div class="col-sm-10">
                <input asp-for="Artist" class="form-control" value="@ViewBag.ArtistName" readonly />
                <span asp-validation-for="Artist" class="text-danger"></span>
            </div>
        </div>
        <div class="from-group">
            <label asp-for="Genre" class="col-sm-2">Genre: </label>
            <div class="col-sm-10">
                <input asp-for="Genre" class="form-control" autofocus />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
        </div>
        <div class="from-group">
            <label asp-for="Date" class="col-sm-2">Date: </label>
            <div class="col-sm-10">
                <input asp-for="Date" type="date" class="form-control" autofocus />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
        <div class="from-group">
            <label asp-for="Time" class="col-sm-2">Date: </label>
            <div class="col-sm-10">
                <input asp-for="Time" type="time" class="form-control" autofocus />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
        </div>
        <div class="from-group">
            <label asp-for="Location" class="col-sm-2">Location: </label>
            <div class="col-sm-10">
                <input asp-for="Location" class="form-control" autofocus />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-info" />
                <a href="/Albums" class="btn btn-default" formnovalidate>Return to List</a>
            </div>
        </div>
    </form>
</div>
